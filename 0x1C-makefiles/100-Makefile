# The same Makefile with more requirements and restrictions.

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS_2 = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean flcean re 

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	rm -f *~ $(NAME)

oclean:
	rm -f $(OBJ)

fclean: clean oclean

re: oclean all
