# The same Makefile with more requirements and restrictions.

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS_2 = -Wall -Werror -Wextra -pedantic
RM_2_ = rm -f

.PHONY: all clean oclean flcean re 

all: m.h $(OBJ)
	$(CC) $(CFLAGS_2) $(OBJ) -o $(NAME)

clean:
	$(RM_2_) *~ $(NAME)

oclean:
	$(RM_2_) $(OBJ)

fclean: clean oclean

re: oclean all
